@using Microsoft.AspNetCore.Mvc.Rendering
@using SalesRep.UI.ViewModel

@model SalesFilterViewModel

@{
    ViewData["Title"] = "Sales";
}

<h2>Sales List</h2>

<form method="get" asp-action="Index" class="row g-3 mb-4">
    <div class="col-md-3">
        <label>Sales Rep</label>
        @Html.DropDownListFor(m => m.SalesRepId, Model.SalesReps, "All", new { @class = "form-control" })
    </div>
    <div class="col-md-3">
        <label>Product</label>
        @Html.DropDownListFor(m => m.ProductId, Model.Products, "All", new { @class = "form-control" })
    </div>
    <div class="col-md-2">
        <label>From</label>
        @Html.TextBoxFor(m => m.FromDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>
    <div class="col-md-2">
        <label>To</label>
        @Html.TextBoxFor(m => m.ToDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
</form>

<a asp-action="Create" class="btn btn-success mb-3">Add New Sale</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Sales Rep</th>
            <th>Product</th>
            <th>Date</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model.Sales)
        {
            <tr>
                <td>@sale.SalesRepName</td>
                <td>@sale.ProductName</td>
                <td>@sale.SaleDate.ToShortDateString()</td>
                <td>@sale.Amount</td>
            </tr>
        }
    </tbody>
</table>